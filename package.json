{
  "name": "actualmoney",
  "productName": "ActualMoney",
  "version": "1.0.3",
  "description": "Synchronises bank statements from MoneyMoney.app to Actual.app",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "lint": "standard",
    "postinstall": "patch-package"
  },
  "keywords": [],
  "author": {
    "name": "Felix Heilmeyer",
    "email": "code@fehe.eu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heilerich/actualmoney"
  },
  "license": "MIT",
  "build": {
    "productName": "ActualMoney",
    "appId": "de.heilerich.actualmoney",
    "directories": {
      "output": "build"
    },
    "afterSign": "electron-builder-notarize",
    "mac": {
      "category": "public.app-category.finance",
      "icon": "Icon.icns",
      "hardenedRuntime": true,
      "publish": [
        "github"
      ],
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "ActualMoney Import File",
            "CFBundleTypeExtensions": [
              "actualmoney"
            ],
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "Alternate"
          }
        ]
      },
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "dependencies": {
    "@actual-app/api": "^1.0.9",
    "csv-parse": "^4.6.5",
    "electron-default-menu": "^1.0.1",
    "electron-store": "^5.1.0",
    "electron-updater": "^4.3.5",
    "moment": "^2.24.0",
    "patch-package": "^6.2.0",
    "sweetalert2": "^8.18.7",
    "vue": "^2.6.10",
    "vue-js-popover": "^1.1.8",
    "vue-loading-overlay": "^3.2.0"
  },
  "devDependencies": {
    "electron": "9.4.0",
    "electron-builder": "^22.9.1",
    "electron-builder-notarize": "^1.2.0",
    "standard": "*"
  }
}
